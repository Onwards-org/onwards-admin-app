{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "noEmit": false,
    "outDir": "dist/server",
    "rootDir": "src/server",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": ["src/server/**/*", "src/shared/**/*"],
  "exclude": ["src/client/**/*"]
}